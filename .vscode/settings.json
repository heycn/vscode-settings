{
  "workbench.colorTheme": "Dark (Molokai)",
  "workbench.iconTheme": "file-icons",
  "editor.fontFamily": "Input Mono, Fira Code, Monaco, monospace",
  "terminal.integrated.fontFamily": "Monaco, JetBrains Mono,  monospace",
  "editor.fontSize": 14,
  "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'zero'",
  "workbench.fontAliasing": "antialiased",
  "editor.cursorSmoothCaretAnimation": "on",
  "window.zoomLevel": 0.7,
  "window.titleBarStyle": "custom",
  "window.dialogStyle": "custom",
  "terminal.integrated.fontSize": 13,
  "workbench.colorCustomizations": {
    "[Dark (Molokai)]": {
      "editorBracketHighlight.foreground1": "#5eaab5",
      "editorBracketHighlight.foreground2": "#4d9375",
      "editorBracketHighlight.foreground3": "#d4976c",
      "editorBracketHighlight.foreground4": "#d9739f",
      "editorBracketHighlight.foreground5": "#e6cc77",
      "editorBracketHighlight.foreground6": "#6394bf",
      "editorLineNumber.foreground": "#51504e",
      "statusBar.background": "#252526"
    }
  },

  // Vim
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.foldfix": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.leader": "<space>",
  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": [ "<C-n>" ], "commands": [ ":nohl" ] },
    { "before": [ "K" ], "commands": [ "lineBreakInsert" ], "silent": true },
    { "before": [ "L" ], "after": [ "$" ] },
    { "before": [ "H" ], "after": [ "^" ] }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    { "before": [ "L" ], "after": [ "$" ] },
    { "before": [ "H" ], "after": [ "^" ] }
  ],
  "vim.handleKeys": {
    "<C-f>": false,
    "<C-c>": false,
    "<C-v>": false,
    "<C-b>": false,
    "<C-w>": false,
    "<C-.>": false,
    "<C-d>": true,
    "<C-u>": true
  },

  // Git
  "git.autofetch": true,
  "git.enabled": true,
  "git.ignoreMissingGitWarning": true,
  "git.enableSmartCommit": true,
  "GitCommitPlugin.ShowEmoji": false,
  "git.confirmSync": false,
  "git.ignoreRebaseWarning": true,
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false,
  "gitlens.menus": {
    "editor": {
      "blame": false,
      "clipboard": true,
      "compare": true,
      "history": false,
      "remote": false
    },
    "editorGroup": {
      "blame": true,
      "compare": false
    },
    "editorTab": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": true
    },
    "explorer": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": true
    },
    "scm": {
      "authors": true
    },
    "scmGroup": {
      "compare": true,
      "openClose": true,
      "stash": true
    },
    "scmGroupInline": {
      "stash": true
    },
    "scmItem": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": false,
      "stash": true
    }
  },

  // Editor
  "editor.rulers": [ 120 ],
  "workbench.startupEditor": "none",
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.suggest.localityBonus": true,
  "editor.suggestSelection": "first",
  "editor.suggest.preview": true,
  "editor.suggest.shareSuggestSelections": true,
  "editor.suggest.showStatusBar": true,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.inlineSuggest.enabled": true,
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.useInlineCompletions": true,
  "emmet.triggerExpansionOnTab": false,
  "editor.detectIndentation": false,
  "editor.accessibilitySupport": "off",
  "editor.acceptSuggestionOnEnter": "off",
  "editor.stickyScroll.enabled": true,
  "editor.hover.sticky": true,
  "explorer.confirmDelete": false,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.fontWeight": "300",
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "workbench.list.defaultFindMode": "filter",
  "security.workspace.trust.untrustedFiles": "open",
  "workbench.layoutControl.enabled": false,
  "workbench.tree.indent": 10,
  "editor.linkedEditing": true,
  "editor.renderWhitespace": "trailing",
  "editor.minimap.enabled": false,
  "editor.scrollBeyondLastLine": false,
  "editor.unicodeHighlight.invisibleCharacters": false,
  "editor.smoothScrolling": true,
  "editor.autoClosingQuotes": "always",
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.limit.value": 8,
  "workbench.list.smoothScrolling": true,
  "editor.dragAndDrop": false,
  "editor.guides.bracketPairsHorizontal": true,
  "editor.find.addExtraSpaceOnTop": false,
  "editor.guides.bracketPairs": "active",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "css.lint.hexColorLength": "ignore",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "explorer.compactFolders": false,
  "editor.tabSize": 2,
  "minapp-vscode.disableAutoConfig": true,
  "update.mode": "manual",
  "files.autoSave": "onWindowChange",
  "redhat.telemetry.enabled": true,
  "window.newWindowDimensions": "inherit",
  "window.restoreWindows": "none",
  "window.autoDetectHighContrast": false,
  "editor.autoClosingBrackets": "always",
  "workbench.productIconTheme": "icons-carbon",
  "editor.autoClosingDelete": "always",
  "editor.autoClosingOvertype": "always",
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": false,
    // "source.fixAll.eslint": true, // this allows ESLint to auto fix on save
    "source.organizeImports": false
  },
  "explorer.confirmDragAndDrop": false,
  "scm.diffDecorationsGutterWidth": 2,
  "extensions.autoUpdate": "onlyEnabledExtensions",
  "extensions.ignoreRecommendations": true,
  "files.simpleDialog.enable": true,
  "debug.onTaskErrors": "debugAnyway",
  "merge-conflict.autoNavigateNextConflict.enabled": true,
  "search.exclude": {
    "**/.git": true,
    "**/.github": true,
    "**/.nuxt": true,
    "**/.output": true,
    "**/.pnpm": true,
    "**/.vscode": true,
    "**/.yarn": true,
    "**/bower_components": true,
    "**/dist/**": true,
    "**/logs": true,
    "**/node_modules": true,
    "**/out/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/tmp": true,
    "**/yarn.lock": true
  },

  // Extension configs
  "volar.autoCompleteRefs": false,
  "volar.completion.preferredTagNameCase": "pascal",
  "prettier.enable": false,
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "prettier.printWidth": 120,
  "prettier.jsxSingleQuote": true,
  "prettier.arrowParens": "avoid",
  "prettier.trailingComma": "none",
  "remote.localPortHost": "allInterfaces",
  "path-intellisense.mappings": {
    "@": "${workspaceRoot}/src",
    "~@": "${workspaceRoot}/src"
  },
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false,
    "typescript": true,
    "go": false
  },
  "codeium.enableConfig": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "ignore": true,
    "go": false
  },
  "todohighlight.isEnable": true,
  "todohighlight.isCaseSensitive": true,
  "todohighlight.keywords": [
    {
      "text": "TODO",
      "color": "#000",
      "borderRadius": "2px",
      "backgroundColor": "#ddd"
    },
    {
      "text": "XXX",
      "color": "#000",
      "borderRadius": "2px",
      "backgroundColor": "#ddd"
    },
    {
      "text": "FIXME",
      "color": "#000",
      "borderRadius": "2px",
      "backgroundColor": "#ddd"
    }
  ],
  "cSpell.allowCompoundWords": true,
  "cSpell.language": "en,en-US",
  "auto-rename-tag.activationOnLanguage": [
    "*"
  ],
  "errorLens.enabledDiagnosticLevels": [
    "warning",
    "error"
  ],
  "errorLens.excludeBySource": [
    "cSpell",
    "Grammarly",
    "eslint"
  ],
  "errorLens.fontWeight": "600",
  "emmet.variables": {
    "lang": "zh"
  },
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact",
    "wxml": "html",
    "vue-html": "html"
  },
  "emmet.syntaxProfiles": {
    "xml": {
      "attr_quotes": "single"
    }
  },
  "files.associations": {
    "*.wpy": "vue",
    "*.cjson": "jsonc",
    "*.wxss": "css",
    "*.wxs": "javascript"
  },
  "liveServer.settings.donotVerifyTags": true,
  "liveServer.settings.donotShowInfoMsg": true,
  "svg.preview.mode": "svg",
  "codeium.enableCodeLens": false,
  "typescript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
  "Codegeex.Privacy": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "workbench.sideBar.location": "right",
  "json.format.keepLines": true,
}