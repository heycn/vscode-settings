{
  // Visuals
  "workbench.colorTheme": "Flexoki Dark",
  "workbench.iconTheme": "symbols",
  "terminal.integrated.fontFamily": "Monaco, JetBrains Mono, monospace",
  "editor.fontFamily": "IBM Plex Mono, Input Mono, Fira Code, JetBrains Mono, Monaco, monospace",
  "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'zero', 'onum'",
  "workbench.fontAliasing": "antialiased",
  "editor.fontSize": 16,
  "terminal.integrated.fontSize": 13,
  "editor.cursorSmoothCaretAnimation": "on",
  "window.zoomLevel": 0.4,
  "window.dialogStyle": "custom",
  "workbench.colorCustomizations": {
    "editorBracketHighlight.foreground1": "#5eaab5",
    "editorBracketHighlight.foreground2": "#4d9375",
    "editorBracketHighlight.foreground3": "#d4976c",
    "editorBracketHighlight.foreground4": "#d9739f",
    "editorBracketHighlight.foreground5": "#e6cc77",
    "editorBracketHighlight.foreground6": "#6394bf",
    "[Dark (Molokai)][Default Dark+]": {
      "editorLineNumber.foreground": "#51504e",
      "statusBar.background": "#252526"
    }
  },

  // Vim
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.foldfix": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.leader": "<space>",
  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": [ "<C-n>" ], "commands": [ ":nohl" ] },
    { "before": [ "K" ], "commands": [ "lineBreakInsert" ], "silent": true },
    { "before": [ "L" ], "after": [ "$" ] },
    { "before": [ "H" ], "after": [ "^" ] },
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    { "before": [ "L" ], "after": [ "$" ] },
    { "before": [ "H" ], "after": [ "^" ] },
    // { "before": [ "p" ], "after": [ "p", "g", "v", "y" ] },
  ],

  // Git
  "git.autofetch": true,
  "git.enabled": true,
  "git.confirmSync": false,
  "git.ignoreMissingGitWarning": true,
  "git.suggestSmartCommit": false,
  "GitCommitPlugin.ShowEmoji": false,
  "git.ignoreRebaseWarning": true,
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.enabled": false,

  // Workbench
  "explorer.compactFolders": false,
  "workbench.tree.indent": 10,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.startupEditor": "none",
  "workbench.list.defaultFindMode": "filter",
  "workbench.layoutControl.enabled": false,
  "workbench.editor.closeOnFileDelete": true,
  "workbench.list.smoothScrolling": true,
  "workbench.activityBar.location": "top",
  "symbols.hidesExplorerArrows": false,

  // Editor
  "editor.rulers": [ 120 ],
  "editor.suggest.preview": true,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.lineNumbers": "interval",
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.useInlineCompletions": true,
  "emmet.triggerExpansionOnTab": false,
  "editor.detectIndentation": false,
  "editor.accessibilitySupport": "off",
  "editor.acceptSuggestionOnEnter": "off",
  "explorer.confirmDelete": false,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "security.workspace.trust.untrustedFiles": "open",
  "editor.linkedEditing": true,
  "editor.renderWhitespace": "trailing",
  "editor.minimap.enabled": false,
  "editor.scrollBeyondLastLine": false,
  "editor.unicodeHighlight.invisibleCharacters": false,
  "editor.smoothScrolling": true,
  "editor.autoClosingQuotes": "always",
  "editor.dragAndDrop": false,
  "editor.guides.bracketPairsHorizontal": true,
  "editor.find.addExtraSpaceOnTop": false,
  "editor.guides.bracketPairs": "active",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "css.lint.hexColorLength": "ignore",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.tabSize": 2,
  "minapp-vscode.disableAutoConfig": true,
  "files.autoSave": "off",
  "redhat.telemetry.enabled": true,
  "window.newWindowDimensions": "inherit",
  "window.restoreWindows": "none",
  "window.autoDetectHighContrast": false,
  "editor.autoClosingBrackets": "always",
  "workbench.productIconTheme": "icons-carbon",
  "editor.autoClosingDelete": "always",
  "breadcrumbs.enabled": false,
  "editor.autoClosingOvertype": "always",
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "audioCues.volume": 0,
  "editor.codeActionsOnSave": {
    "source.fixAll": false,
    // "source.fixAll.eslint": true, // this allows ESLint to auto fix on save
    "source.organizeImports": false
  },
  "explorer.confirmDragAndDrop": false,
  "scm.diffDecorationsGutterWidth": 2,
  "extensions.autoUpdate": "onlyEnabledExtensions",
  "extensions.ignoreRecommendations": true,
  "files.simpleDialog.enable": true,
  "debug.onTaskErrors": "debugAnyway",
  "merge-conflict.autoNavigateNextConflict.enabled": true,
  "search.exclude": {
    "**/.git": true,
    "**/.github": true,
    "**/.nuxt": true,
    "**/.output": true,
    "**/.pnpm": true,
    "**/.vscode": true,
    "**/.yarn": true,
    "**/bower_components": true,
    "**/dist/**": true,
    "**/logs": true,
    "**/node_modules": true,
    "**/out/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/tmp": true,
    "**/yarn.lock": true
  },

  // Extension configs
  "remote.localPortHost": "allInterfaces",
  "Codegeex.EnableExtension": true,
  "path-intellisense.mappings": {
    "@": "${workspaceRoot}/src",
    "~@": "${workspaceRoot}/src"
  },
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "codeium.enableConfig": {
    "*": true
  },
  "cSpell.allowCompoundWords": true,
  "cSpell.language": "en,en-US",
  "auto-rename-tag.activationOnLanguage": [ "*" ],
  "errorLens.fontWeight": "600",
  "errorLens.fontSize": "14",
  "errorLens.editorHoverPartsEnabled": {
    "buttonsEnabled": false
  },
  "errorLens.enabledDiagnosticLevels": [ "warning", "error" ],
  "errorLens.excludeBySource": [ "cSpell", "Grammarly", "eslint" ],
  "emmet.variables": {
    "lang": "zh"
  },
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact",
    "wxml": "html",
    "vue-html": "html"
  },
  "emmet.syntaxProfiles": {
    "xml": {
      "attr_quotes": "single"
    }
  },
  "files.associations": {
    "*.wpy": "vue",
    "*.cjson": "jsonc",
    "*.wxss": "css",
    "*.wxs": "javascript"
  },
  "liveServer.settings.donotVerifyTags": true,
  "svg.preview.mode": "svg",
  "codeium.enableCodeLens": false,
  "typescript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
  "json.format.keepLines": true,
  "Codegeex.Privacy": true,
  "window.commandCenter": false,
  "update.mode": "manual",
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[scss]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },

  // Prettier - I wouldn't normally use it.
  "prettier.arrowParens": "avoid",
  "prettier.printWidth": 120,
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all",
}
