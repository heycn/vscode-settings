{
  "workbench.colorTheme": "Dark (Molokai)",
  "workbench.iconTheme": "file-icons",
  "workbench.productIconTheme": "icons-carbon",
  "editor.fontFamily": "Input Mono, Dank Mono, Microsoft YaHei, monospace",
  "terminal.integrated.fontFamily": "Monaco, monospace",
  "editor.fontSize": 14,
  "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'ss06', 'zero'",
  "window.autoDetectColorScheme": false,
  "workbench.fontAliasing": "antialiased",
  "window.nativeTabs": true,
  "workbench.startupEditor": "none",
  "window.zoomLevel": 0.6,
  "terminal.integrated.fontSize": 13,
  "workbench.colorCustomizations": {
    "[Dark (Molokai)]": {
      "editorLineNumber.foreground": "#4449",
      "statusBar.background": "#252526"
    }
  },

  // Vim
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.foldfix": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.leader": "<space>",
  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": ["<C-n>"], "commands": [":nohl"] },
    { "before": ["K"], "commands": ["lineBreakInsert"], "silent": true },
    { "before": ["L"], "after": ["$"] },
    { "before": ["H"], "after": ["^"] }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    { "before": ["L"], "after": ["$"] },
    { "before": ["H"], "after": ["^"] }
  ],
  "vim.handleKeys": {
    "<C-f>": false,
    "<C-c>": false,
    "<C-v>": false,
    "<C-b>": false,
    "<C-w>": false,
    "<C-.>": false,
    "<C-d>": true,
    "<C-u>": true
  },
  "vim.autoSwitchInputMethod.enable": true,
  "vim.autoSwitchInputMethod.defaultIM": "com.apple.keylayout.ABC",
  "vim.autoSwitchInputMethod.obtainIMCmd": "/opt/homebrew/bin/im-select",
  "vim.autoSwitchInputMethod.switchIMCmd": "/opt/homebrew/bin/im-select {im}",

  // Editor
  "git.autofetch": true,
  "git.enabled": true,
  "git.ignoreMissingGitWarning": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.ignoreRebaseWarning": true,
  "git.untrackedChanges": "separate",
  "editor.tabSize": 2,
  "editor.inlineSuggest.enabled": true,
  "editor.lineNumbers": "interval",
  "editor.cursorSmoothCaretAnimation": "on",
  "explorer.confirmDelete": false,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.fontWeight": "300",
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.smoothScrolling": true,
  "editor.renderWhitespace": "boundary",
  "workbench.list.defaultFindMode": "filter",
  "workbench.list.smoothScrolling": true,
  "security.workspace.trust.untrustedFiles": "open",
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.limit.value": 8,
  "workbench.sideBar.location": "right",
  "workbench.layoutControl.enabled": false,
  "workbench.tree.indent": 10,
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.bracketPairColorization.enabled": false,
  "editor.scrollBeyondLastLine": false,
  "editor.unicodeHighlight.invisibleCharacters": false,
  "editor.smoothScrolling": true,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.autoClosingBrackets": "always",
  "editor.autoClosingDelete": "always",
  "editor.autoClosingOvertype": "always",
  "editor.autoClosingQuotes": "always",
  "editor.dragAndDrop": false,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.guides.bracketPairsHorizontal": true,
  "editor.accessibilitySupport": "off",
  "editor.find.addExtraSpaceOnTop": false,
  "editor.guides.bracketPairs": "active",
  "editor.suggestSelection": "first",
  "editor.codeActionsOnSave": {
    "source.fixAll": false,
    "source.organizeImports": false
  },
  "html.autoCreateQuotes": false,
  "explorer.confirmDragAndDrop": false,
  "window.dialogStyle": "custom",
  "window.titleBarStyle": "custom",
  "scm.diffDecorationsGutterWidth": 2,
  "extensions.autoUpdate": true,
  "extensions.ignoreRecommendations": true,
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.simpleDialog.enable": true,
  "debug.onTaskErrors": "debugAnyway",
  "merge-conflict.autoNavigateNextConflict.enabled": true,
  "files.exclude": {
    "**/.classpath": true,
    "**/.DS_Store": false,
    "**/.factorypath": true,
    "**/.history": true,
    "**/.project": true,
    "**/.settings": true,
    "**/*.acn": true,
    "**/*.acr": true,
    "**/*.alg": true,
    "**/*.aux": true,
    "**/*.bcf": true,
    "**/*.glg2": true,
    "**/*.glo2": true,
    "**/*.gls2": true,
    "**/*.ist": true,
    "**/*.log": true,
    "**/.git": true,
    "**/*.run.xml": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/CVS": true,
    "**/node_modules": false,
    "**/tmp": true
  },
  "search.exclude": {
    "**/.git": true,
    "**/.github": true,
    "**/.nuxt": true,
    "**/.output": true,
    "**/.pnpm": true,
    "**/.vscode": true,
    "**/.yarn": true,
    "**/bower_components": true,
    "**/dist/**": true,
    "**/logs": true,
    "**/node_modules": true,
    "**/out/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/tmp": true,
    "**/yarn.lock": true
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "css.lint.hexColorLength": "ignore",
  "window.restoreWindows": "none",
  "files.autoSave": "onFocusChange",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "path-intellisense.mappings": {
    "@": "${workspaceRoot}/src",
    "~@": "${workspaceRoot}/src"
  },
  "explorer.compactFolders": false,
  "remote.localPortHost": "allInterfaces",

  // Extension Settings
  "volar.icon.splitEditors": false,
  "volar.autoCompleteRefs": false,
  "prettier.tabWidth": 2,
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "prettier.printWidth": 280,
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": true,
    "markdown": true,
    "vue": true,
    "javascript": true,
    "jsonc": true,
    "ruby": true
  },
  "gitlens.codeLens.recentChange.enabled": true,
  "where-am-i.colorful": false,
  "todohighlight.isEnable": true,
  "todohighlight.isCaseSensitive": true,
  "todohighlight.keywords": [
    { "text": "TODO", "color": "#000", "borderRadius": "2px", "backgroundColor": "#ddd" },
    { "text": "XXX", "color": "#000", "borderRadius": "2px", "backgroundColor": "#ddd" },
    { "text": "FIXME", "color": "#000", "borderRadius": "2px", "backgroundColor": "#ddd" }
  ],
  "cSpell.allowCompoundWords": true,
  "cSpell.language": "en,en-US",
  "auto-rename-tag.activationOnLanguage": ["*"],
  "errorLens.enabledDiagnosticLevels": ["warning", "error"],
  "errorLens.excludeBySource": ["cSpell", "Grammarly", "eslint"],
  "errorLens.fontWeight": "600",
  "prettier.jsxSingleQuote": true,
  "prettier.arrowParens": "avoid",
  "prettier.trailingComma": "none",
  "emmet.variables": { "lang": "zh" },
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.triggerExpansionOnTab": false,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact",
    "wxml": "html",
    "vue-html": "html"
  },
  "emmet.syntaxProfiles": {
    "xml": {
      "attr_quotes": "single"
    }
  },

  // Formatter
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[less]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[xml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[ruby]": {
    "editor.defaultFormatter": "jnbt.vscode-rufo"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "files.associations": {
    "*.wpy": "vue"
  }
}
