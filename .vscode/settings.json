{
  "workbench.colorTheme": "Dark (Molokai)",
  "workbench.iconTheme": "file-icons",
  "workbench.productIconTheme": "icons-carbon",
  "editor.fontFamily": "Input Mono, monospace",
  "workbench.fontAliasing": "antialiased",
  "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'ss06', 'zero'",
  "window.zoomLevel": 0.6,
  "workbench.colorCustomizations": {
    "editor.background": "#121212",
    "editorLineNumber.foreground": "#444",
    "statusBar.background": "#252526",
  },

  // Vim
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.foldfix": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": ["<C-n>"], "commands": [":nohl"] },
    { "before": ["K"], "commands": ["lineBreakInsert"], "silent": true },
    { "before": ["L"], "after": ["$"] },
    { "before": ["H"], "after": ["^"] },
    { "before": ["j"], "after": ["g", "j"] },
    { "before": ["k"], "after": ["g", "k"] }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    { "before": ["L"], "after": ["$"] },
    { "before": ["H"], "after": ["^"] }
  ],
  "vim.handleKeys": {
    "<C-f>": false,
    "<C-c>": false,
    "<C-v>": false,
    "<C-b>": false,
    "<C-w>": false,
    "<C-.>": false
  },

  // Git
  "git.enabled": true,
  "git.ignoreMissingGitWarning": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.ignoreRebaseWarning": true,
  "git.autofetch": true,
  "git.untrackedChanges": "separate",
  "gitlens.codeLens.authors.enabled": false,
  "githubIssues.workingIssueFormatScm": "#${issueNumberLabel}",
  "githubPullRequests.fileListLayout": "tree",
  "gitlens.codeLens.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false,
  "gitlens.menus": {
    "editor": {
      "blame": false,
      "clipboard": true,
      "compare": true,
      "history": false,
      "remote": false
    },
    "editorGroup": {
      "blame": true,
      "compare": false
    },
    "editorTab": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": true
    },
    "explorer": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": true
    },
    "scm": {
      "authors": true
    },
    "scmGroup": {
      "compare": true,
      "openClose": true,
      "stash": true
    },
    "scmGroupInline": {
      "stash": true
    },
    "scmItem": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": false,
      "stash": true
    }
  },

  // Editor
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontWeight": "300",
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.defaultProfile.windows": "bash",
  "terminal.integrated.profiles.windows": {
    "bash": {
      "path": "D:\\Software\\Git\\bin\\bash.exe",
      "args": ["-i", "-l"]
    }
  },
  "terminal.integrated.smoothScrolling": true,
  "security.workspace.trust.banner": "never",
  "workbench.layoutControl.enabled": false,
  "workbench.list.defaultFindMode": "filter",
  "workbench.list.smoothScrolling": true,
  "workbench.sideBar.location": "right",
  "workbench.tree.indent": 10,
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.limit.value": 5,
  "workbench.tree.expandMode": "singleClick",
  "editor.lineNumbers": "interval",
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.bracketPairColorization.enabled": false,
  "editor.scrollBeyondLastLine": false,
  "editor.renderWhitespace": "none",
  "editor.unicodeHighlight.invisibleCharacters": false,
  "editor.wordWrapColumn": 120,
  "editor.quickSuggestionsDelay": 0,
  "editor.smoothScrolling": true,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.autoClosingBrackets": "always",
  "editor.autoClosingDelete": "always",
  "editor.autoClosingOvertype": "always",
  "editor.autoClosingQuotes": "always",
  "editor.dragAndDrop": false,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.guides.bracketPairsHorizontal": true,
  "editor.accessibilitySupport": "off",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.find.addExtraSpaceOnTop": false,
  "editor.guides.bracketPairs": "active",
  "editor.inlineSuggest.enabled": true,
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "editor.codeActionsOnSave": {
    "source.fixAll": false,
    "source.organizeImports": false
  },
  "html.autoCreateQuotes": false,
  "explorer.confirmDragAndDrop": false,
  "window.autoDetectColorScheme": false,
  "window.dialogStyle": "custom",
  "window.titleBarStyle": "custom",
  "window.menuBarVisibility": "toggle",
  "window.nativeTabs": true, // this is great, macOS only
  "scm.diffDecorationsGutterWidth": 2,
  "explorer.confirmDelete": false,
  "extensions.autoUpdate": "onlyEnabledExtensions",
  "extensions.ignoreRecommendations": true,
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.simpleDialog.enable": true,
  "debug.onTaskErrors": "debugAnyway",
  "merge-conflict.autoNavigateNextConflict.enabled": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "files.exclude": {
    "**/.classpath": true,
    "**/.DS_Store": false,
    "**/.factorypath": true,
    "**/.history": true,
    "**/.project": true,
    "**/.settings": true,
    "**/*.acn": true,
    "**/*.acr": true,
    "**/*.alg": true,
    "**/*.aux": true,
    "**/*.bcf": true,
    "**/*.glg2": true,
    "**/*.glo2": true,
    "**/*.gls2": true,
    "**/*.ist": true,
    "**/*.log": true,
    "**/.git": true,
    "**/*.run.xml": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/CVS": true,
    "**/node_modules": false,
    "**/tmp": true
  },
  "search.exclude": {
    "**/.git": true,
    "**/.github": true,
    "**/.nuxt": true,
    "**/.output": true,
    "**/.pnpm": true,
    "**/.vscode": true,
    "**/.yarn": true,
    "**/bower_components": true,
    "**/dist/**": true,
    "**/logs": true,
    "**/node_modules": true,
    "**/out/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/tmp": true,
    "**/yarn.lock": true
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "files.associations": {
    "*.js": "javascript",
    "*.json": "jsonc",
    "*.cjson": "jsonc",
    "*.wxss": "css",
    "*.wxs": "javascript",
    "*.tsx ": "typescriptreact"
  },
  "css.lint.hexColorLength": "ignore",
  "window.restoreWindows": "none",
  "files.autoSave": "onWindowChange",
  "workbench.startupEditor": "none",
  "workbench.editor.tabCloseButton": "off",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "window.customMenuBarAltFocus": false,
  "cSpell.userWords": ["heycn"],
  "html.format.enable": false,
  "path-intellisense.mappings": { "@": "${workspaceRoot}/src" },
  "[xml]": { "editor.defaultFormatter": "redhat.vscode-xml" },
  "explorer.compactFolders": false,
  "[ruby]": { "editor.defaultFormatter": "jnbt.vscode-rufo" },
  "remote.localPortHost": "allInterfaces",
  "eslint.codeActtradind viewion.showDocumentation": { "enable": true },
  "eslint.quiet": true,
  "eslint.validate": [
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "json5"
  ],

  // Extension
  "todohighlight.isEnable": true,
  "todohighlight.isCaseSensitive": true,
  "todohighlight.keywords": [
    { "text": "TODO", "color": "#000", "borderRadius": "2px", "backgroundColor": "#aaa" },
    { "text": "XXX", "color": "#000", "borderRadius": "2px", "backgroundColor": "#aaa" },
    { "text": "FIXME", "color": "#000", "borderRadius": "2px", "backgroundColor": "#aaa" }
  ],
  "cSpell.allowCompoundWords": true,
  "cSpell.language": "en,en-US",
  "sync.forceDownload": true,
  "sync.forceUpload": true,
  "sync.quietSync": true,
  "sync.gist": "6b0777459ae1fd04b55ff139a165b6ba",
  "prettier.jsxSingleQuote": true,
  "prettier.semi": false,
  "prettier.printWidth": 120,
  "prettier.singleQuote": true,
  "prettier.arrowParens": "avoid",
  "prettier.trailingComma": "none",
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": true,
    "markdown": false
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "emmet.variables": { "lang": "zh" },
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.triggerExpansionOnTab": false,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact",
    "wxml": "html",
    "vue-html": "html"
  },
  "errorLens.enabledDiagnosticLevels": ["warning", "error"],
  "errorLens.excludeBySource": ["cSpell", "Grammarly", "eslint"],
  "emmet.syntaxProfiles": {
    "xml": {
      "attr_quotes": "single"
    }
  },
  "[less]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  }
}
